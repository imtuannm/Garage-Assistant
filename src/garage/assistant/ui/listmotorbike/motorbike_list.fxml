<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="396.0" prefWidth="782.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="garage.assistant.ui.listmotorbike.MotorbikeListController">
   <children>
      <VBox prefHeight="430.0" prefWidth="853.0">
         <children>
            <JFXTextField fx:id="keyword" labelFloat="true" onAction="#handleSearchOperation" prefHeight="25.0" prefWidth="555.0" promptText="Search">
               <VBox.margin>
                  <Insets bottom="5.0" left="300.0" right="300.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <TableView fx:id="tblView" prefHeight="400.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="idCol" prefWidth="0.0" text="Vehicle's ID" />
                <TableColumn fx:id="producerCol" prefWidth="0.0" text="Producer" />
                  <TableColumn fx:id="nameCol" prefWidth="0.0" text="Name" />
                  <TableColumn fx:id="typeCol" prefWidth="0.0" text="Type" />
                  <TableColumn fx:id="colorCol" prefWidth="0.0" text="Color" />
                  <TableColumn fx:id="feeCol" prefWidth="0.0" text="Base Fee" />
                  <TableColumn fx:id="fineCol" prefWidth="0.0" text="Fine Percent" />
                  <TableColumn fx:id="statusCol" prefWidth="0.0" text="Status" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleMotorbikeMaintainOption" text="Set Maintainace" />
                      <MenuItem mnemonicParsing="false" onAction="#handleMotorbikeDeleteOption" text="Delete" />
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
